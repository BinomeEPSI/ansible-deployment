map $http_user_agent $log_ua {
	~Monit 0;
	~UptimeRobot/2.0 0;

	default 1; 
}

upstream codimd {
    ip_hash;
    server 127.0.0.1:{{ codimd_port }};
}

server {
	include includes/listen-https;
	server_name {{ codimd_domain }};
	root /opt/pole-emploi/;
	index index.html;

	add_header Content-Security-Policy "frame-ancestors 'none'; object-src 'none'";
	add_header X-Frame-Options DENY;
	add_header X-Content-Type-Options nosniff;
	add_header X-XSS-Protection "1; mode=block";
	add_header Referrer-Policy "no-referrer, strict-origin-when-cross-origin";

	include includes/acme-challenge;
	include includes/common;

	access_log /var/log/nginx/{{ codimd_domain }}.access.log combined if=$log_ua;
	error_log /var/log/nginx/{{ codimd_domain }}.error.log;

    location / {
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $http_host;
        proxy_set_header X-NginX-Proxy true;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_http_version 1.1;
        proxy_pass http://codimd;

        proxy_cache_bypass $http_upgrade;
        proxy_redirect off;
    }
	
	include includes/ssl-stapling;
	include includes/ssl-hsts;

	ssl_certificate         /etc/letsencrypt/live/{{ codimd_domain }}/fullchain.pem;
	ssl_certificate_key     /etc/letsencrypt/live/{{ codimd_domain }}/privkey.pem;
	ssl_trusted_certificate /etc/letsencrypt/live/{{ codimd_domain }}/chain.pem;
}

server {
	include includes/listen-http;
	include includes/acme-challenge;
	include includes/common;
	server_name {{ codimd_domain }};
	return 301 https://$host$request_uri;
}